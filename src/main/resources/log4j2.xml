<Configuration status="warn" packages="com.rapidomize.util.log4j2">
    <Appenders>
        <RapidomizeAppender name="STDOUT">
            <PatternLayout pattern="%d [%t] %-5p %c{1} - %m"/>
            <appId>application</appId>
        </RapidomizeAppender>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>